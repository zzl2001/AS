<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="vertical">
    <Switch
        android:id="@+id/sw_Accessbility"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:checked="false"
        android:layout_marginRight="20dp"
        android:text="@string/sw_Accessbility"/>
    <Switch
        android:id="@+id/sw_canBackGround"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:checked="false"
        android:layout_marginRight="20dp"
        android:text="@string/sw_canBackground"/>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="70dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="100dp"
    android:orientation="vertical">
    <TimePicker
        android:id="@+id/timepick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"/>

    <Switch
        android:id="@+id/sw_cpdaily_forest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/cpdailySwitch"/>

    <Button
        android:id="@+id/btn_openSchool"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自动签到"
        android:background="@drawable/button_click"
/>
    <Button
        android:id="@+id/btn_shutDownService"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关闭脚本"
        />

    <EditText
        android:id="@+id/text_openShell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="请输入命令"
        android:textSize="18dp">

    </EditText>

    <Button
        android:id="@+id/btn_openShell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >
    </Button>
    <TextView
        android:id="@+id/shellResult"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="shell结果">
    </TextView>
</LinearLayout>


</RelativeLayout>